<device:BaseMachine x:Class="WpfHuaWei.DeviceView.CurrentBianZhi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:device="clr-namespace:WpfHuaWei.DeviceView"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid x:Name="rootGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="420"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border BorderBrush="Gray" BorderThickness="0,0,0,1"/>
        
        <TextBlock x:Name="tbTitle" Text="编织" FontSize="16" FontWeight="Bold"
                   FontFamily="微软雅黑" VerticalAlignment="Center" HorizontalAlignment="Center"/>

         <Canvas Grid.Row="1" Width="414" Height="304" VerticalAlignment="Center"
                 HorizontalAlignment="Center">
            <Image x:Name="bzImage" Width="412" Height="302" Canvas.Top="36"/>
        </Canvas>
    </Grid>
</device:BaseMachine>
